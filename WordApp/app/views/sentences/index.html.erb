<div class="container">
<% if notice %>

<div class="alert alert-success " role="alert">
        <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
        <span class="sr-only">Success:</span><div style="display: inline-block">Welcome Back!!</div>
        </div>
<%end%>

<%= link_to 'New Sentence', new_sentence_path, class: ' btn btn-default btn-block btn-lg', id: "new_sentence_button"%>

<div class="panel panel-default">
  <div class="panel-heading"><h1>Your Sentences</h1></div>

    <table class="table" id="list_of_sentences">
      <tbody> 
        <% @sentences.each do |sentence| %>
          <tr>
           <% if sentence.words%>  
             <% sentence.words[0].capitalize! %> 
             <td ><%= sentence.words.join(" ")%></td>
            <%end%>

            <td><%= link_to 'Delete', sentence, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default', style: 'width:100%;'%></td>
          </tr>
        <% end %>
      </tbody>


    </table>
  </div>
<br>


</div>
